<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <link rel="stylesheet" href="/styles/delete.css" />
    <title>Results</title>
  </head>
  <body>

    <div class="sidebar">
        <div class="logo_content">
            <div class="logo">
                <i class="fa-solid fa-brain"></i>
                <div class="logo_name">AdminController</div>
            </div>
            <i class="fa-solid fa-bars" id="btn"></i>    
        </div>
        <ul class="nav_list">

            <!-- main -->
            <li>
                <a href="/">
                <i class="fa-solid fa-house"></i>
                <span class="links_name">Main</span>
                </a>
                <span class="tooltip">Main</span>
            </li>
            <!-- create -->
            <li>
                <a href="create">
                <i class="fa-solid fa-circle-plus"></i>
                <span class="links_name">Create</span>
                </a>
                <span class="tooltip">Create</span>
            </li>
            <!-- update -->
            <li>
                <a href="update">
                    <i class="fa-solid fa-file-pen"></i>
                <span class="links_name">Update</span>
                </a>
                <span class="tooltip">Update</span>
            </li>
            <!-- find -->
            <li>
                <a href="find">
                    <i class="fa-solid fa-magnifying-glass"></i>
                <span class="links_name">Find</span>
                </a>
                <span class="tooltip">Find</span>
            </li>
            <li>
                <a href="results">
                <i class="fa-solid fa-file-circle-check"></i>
                <span class="links_name">Result</span>
                </a>
                <span class="tooltip">Result</span>
            </li>
           
            <li>
                <a href="delete">
                    <i class="fa-solid fa-trash"></i>
                <span class="links_name">Delete</span>
                </a>
                <span class="tooltip">Delete</span>
            </li> 
        </ul>
        
        
    </div>
    <div class="home_content">
        <div class="container">
            <div class="col-md-7 col-lg-8">
                <hr class="my-4">
                <div>
                    <label for="data" class="form-label">Result of your query: </label>
                    <% if(Array.isArray(users)){%>
                        <table>
                            <tr><td>Name</td><td>Email</td><td>Password</td></tr>
                        <%for(let a=0;a <users.length;a++){%>
                            <tr><td><%=users[a].name%></td><td><%=users[a].email%></td><td><%=users[a].password%></td></tr>
                        <%}%>
                        </table>
                    <%}else{%>
                    <label for="data" class="form-label"> <%=users%>
                    </label>
                    <%}%>
                </div>
            </div>
        </div>
    </div>
   
    <script>
        let btn = document.querySelector("#btn");
        let sidebar = document.querySelector(".sidebar");
        let home_content=document.querySelector(".home_content");
        btn.onclick = function(){
            sidebar.classList.toggle("active");
            home_content.classList.toggle("active");
        }
    </script>
  </body>
</html>
